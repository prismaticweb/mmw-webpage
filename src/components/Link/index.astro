---
import type { HTMLAttributes } from "astro/types";
import * as styles from "./index.css";

export type Props = Omit<HTMLAttributes<"a">, "slot"> & {
  href: string;
  label: string;
  icon?: {
    alt: string;
    src: string;
  };
}

const { href, label, icon, [`class`]: className, [`class:list`]: classNameList, ...attrs } = Astro.props as Props;
---

<a class:list={[styles.link, className, classNameList]}
  href={href}
  {...attrs}>
  <Fragment set:text={label} />
  {icon ? <img {...icon} width="24" height="24" /> : null}
</a>